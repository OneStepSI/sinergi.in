<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PengrajinDetailEcom">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3F51B5"
        app:theme="@style/ToolbarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E7E9"
        android:orientation="vertical"
        android:padding="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_shape"
            android:padding="10dp"
            android:translationZ="10dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/detailEcomImage"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <TextView
                android:id="@+id/detailEcomPrice"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="175dp"
                android:background="@drawable/yellow_circle"
                android:padding="10dp"
                android:text="Rp. 70.000"
                android:textColor="#333" />

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/detailEcomImage"
                android:layout_marginTop="10dp"
                android:background="#3F51B5"
                android:text="Beli"
                android:textColor="#fff" />
            <TextView
                android:id="@+id/detailEcomJudul"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnBuy"
                android:text="Nama Barang : "/>
            <TextView
                android:id="@+id/detailEcomHarga"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailEcomJudul"
                android:text="Harga Barang : "/>
            <TextView
                android:id="@+id/detailEcomBerat"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailEcomHarga"
                android:text="Berat : "/>
            <TextView
                android:id="@+id/detailEcomKondisi"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailEcomBerat"
                android:text="Kondisi : "/>
            <TextView
                android:id="@+id/detailEcomTerjual"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailEcomKondisi"
                android:text="Terjual : "/>
            <TextView
                android:id="@+id/detailEcomDeskripsi"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailEcomTerjual"
                android:text="Deskripsi : "/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>